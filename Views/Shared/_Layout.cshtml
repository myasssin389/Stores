@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using Stores.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject StoresDbContext _context

@{
    bool hasApplication = false;

    if (SignInManager.IsSignedIn(User))
    {
        var userId = UserManager.GetUserId(User);

        var application = _context.StoreAccountApplications
            .FirstOrDefault(a => a.StoreAdminId == userId);

        if (application != null)
        {
            hasApplication = true;
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Stores</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" 
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                Stores
            </a>
            <button 
                class="navbar-toggler" 
                type="button" 
                data-bs-toggle="collapse" 
                data-bs-target="#navbarNavDropdown" 
                aria-controls="navbarNavDropdown" 
                aria-expanded="false" 
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" 
                               asp-area="" 
                               asp-controller="StoreAccountApplication" 
                               asp-action="ReviewApplications">
                                Review Store Account Applications
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Customer"))
                    {
                        <li class="nav-item">
                            @if (!hasApplication)
                            {
                                <a class="nav-link"
                                   asp-controller="StoreAccountApplication"
                                   asp-action="Apply">
                                    Apply for a Store Account
                                </a>
                            }
                            else
                            {
                                <a class="nav-link"
                                   asp-controller="StoreAccountApplication"
                                   asp-action="Details"
                                   asp-route-userId="@UserManager.GetUserId(User)">
                                    View My Application
                                </a>
                            }
                        </li>
                        
                    }
                    @if (User.IsInRole("StoreAdmin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area=""
                               asp-controller="Store"
                               asp-action="ViewStore"
                               asp-route-userId="@UserManager.GetUserId(User)">
                                My Store
                            </a>
                        </li>
                    }
                    @if (!User.IsInRole("Admin") && SignInManager.IsSignedIn(User))
                    {
                        <li>
                            <a id="orders" class="nav-link text-dark" asp-action="MyOrders" asp-controller="Order" title="PreviousOrders">My Orders</a>
                        </li>
                    }
                    <ul class="navbar-nav">
                        <partial name="_LoginPartial"/>
                    </ul>
                </ul>
            </div>
        </div>
    </nav>
    
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Stores - <a asp-area="" asp-controller="Home" asp-action="Privacy">
            Privacy
        </a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>