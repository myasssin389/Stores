@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using Stores.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject StoresDbContext _context

@{
    Cart userCart = null;

    if (SignInManager.IsSignedIn(User))
    {
        var userId = UserManager.GetUserId(User);
        userCart = _context.Carts.Include(c => c.CartProductMaps)
            .ThenInclude(cp => cp.Product)
            .FirstOrDefault(c => c.UserId == userId);
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Stores</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Stores</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Stores" asp-action="Create">Add a Store</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Create">Add a Product</a>
                    </li>
                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>
                </ul>
            </div>
        </div>
    </nav>
    <div class="shopping-cart-wrapper" id="navbarShopCartDropdown">
        <div class="shopping-cart-dropdown">
            <div class="cart-header">
                <h6>Shopping Cart</h6>
                <span class="cart-count">@(userCart?.CartProductMaps?.Count ?? 0) Items</span>
            </div>
            <div class="cart-items">
                @if (userCart != null && userCart.CartProductMaps.Any())
                {
                    @foreach (var item in userCart.CartProductMaps)
                    {
                        <div class="cart-item">
                            <span>@item.Product.Name</span> x @item.Quantity
                            <button class="btn btn-outline-danger" asp-action="DeleteFromCart" asp-controller="Cart"><i class="bi bi-trash"></i></button>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-cart">
                        <p>Your cart is empty</p>
                    </div>
                }
            </div>
            <div class="cart-footer">
                <div class="cart-total">
                    <strong>Total: @userCart?.getTotalAmount().ToString("C")</strong>
                </div>
                <button class="btn btn-primary btn-sm">Checkout</button>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<button class="shop-cart-toggler" type="button" aria-label="Toggle shopping cart">
    <i class="bi bi-cart"></i>
</button>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Stores - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>