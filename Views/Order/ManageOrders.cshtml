@model IEnumerable<Stores.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
}

@await Html.PartialAsync("_MessagePartial")

<h2>Manage Orders</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Order #</th>
        <th>Date</th>
        <th>Customer</th>
        <th>Status</th>
        <th>Total</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.Date.ToString("g")</td>
            <td>@order.User.Name</td>
            <td>@order.Status.ToString()</td>
            <td>@order.Total.ToString("C")</td>
            <td>
                <a asp-action="OrderDetails" asp-route-orderId="@order.Id" class="view-order-btn btn btn-sm btn-info">View</a>
                <a asp-action="UpdateStatus" asp-route-orderId="@order.Id" class="update-status-btn btn btn-sm btn-warning">Update Status</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="ViewStore" asp-controller="Store" asp-route-userId="@Model.First().Store.StoreAdminId" class="btn btn-secondary">Back to Store</a>