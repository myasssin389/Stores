@model IEnumerable<Stores.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
}

<h2>Manage Orders</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Order #</th>
        <th>Date</th>
        <th>Customer</th>
        <th>Status</th>
        <th>Total</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.Date.ToString("g")</td>
            <td>@order.UserId</td>
            <td>@order.Status.Name</td>
            <td>@order.Total.ToString("C")</td>
            <td>
                <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-info">View</a>
                <a asp-action="UpdateStatus" asp-route-id="@order.Id" class="btn btn-sm btn-warning">Update Status</a>
            </td>
        </tr>
    }
    </tbody>
</table>