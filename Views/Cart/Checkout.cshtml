@model Stores.ViewModels.CheckoutViewModel

@{
    var productsGroupedByStoreId = Model.Cart.CartProductMaps.GroupBy(a => a.Product.StoreId);
}

<h2>Checkout</h2>

<div class="checkout-summary container">
    @if (productsGroupedByStoreId.Count() > 1)
    {
        <h6 style="color: red">NOTE: You have ordered from multiple stores, 1 order is placed per store</h6>
    }
    <h4>Order Summary</h4>
    <hr/>
    @foreach (var storeGroup in productsGroupedByStoreId)
    {
        <div class="checkout-item col-6 col-md-4 col-lg-3 mb-4">
            <h6><strong>@storeGroup.First().Product.Store.Name</strong></h6>
            @foreach (var item in storeGroup)
            {
                <div class="checkout-item-inner d-flex align-items-center">

                    <div class="d-flex align-items-center">
                        <img
                            src="@item.Product.PhotoLink"
                            alt="@item.Product.PhotoLink"
                            class="checkout-product-img img-fluid"/>

                        <div class="checkout-item-text ms-3">
                            <p class="product-name mb1">@item.Product.Name</p>
                            <p class="product-qty text-muted">@item.Quantity</p>
                        </div>
                    </div>

                    <form action="/api/cart/remove/@item.ProductId" method="post" style="display:inline;">
                        <input type="hidden" name="productId" value="@item.ProductId"/>
                        <button type="submit" class="btn btn-outline-danger delete-item-from-cart">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            }
        </div>
        <hr/>
    }
    <div class="total mt-4">
        <strong>Total: @Model.Cart.GetTotalAmount().ToString("C")</strong>
    </div>
</div>

<hr/>

<h4>Shipping & Payment</h4>

<form asp-action="PlaceOrder" asp-controller="Order" method="post">
    <div class="mb-3">
        <h5>Shipping Address</h5>
        <input asp-for="ShippingAddress.City" class="form-control" placeholder="City" />
        <input asp-for="ShippingAddress.StreetName" class="form-control mt-1" placeholder="Street Name" />
        <input asp-for="ShippingAddress.StreetNumber" class="form-control mt-1" placeholder="Street Number" />
        <input asp-for="ShippingAddress.BuildingNumber" class="form-control mt-1" placeholder="Building Number" />
        <input asp-for="ShippingAddress.ApartmentNumber" class="form-control mt-1" placeholder="Apartment Number" />
        <input asp-for="ShippingAddress.ZipCode" class="form-control mt-1" placeholder="Zip Code (Optional)" />
    </div>

    <div class="mb-3 mt-3">
        <h5>Payment Method</h5>
        <select asp-for="SelectedPaymentMethodId" class="form-select" id="paymentMethod">
            <option value="">Select Payment Method</option>
            @foreach (var pm in Model.PaymentMethods)
            {
                <option value="@pm.Id">@pm.Name</option>
            }
        </select>
    </div>

    <!-- Checkbox (hidden by default, shown if COD selected) -->
    <div id="billingCheckboxContainer" class="form-check mb-3" style="display:none;">
        <input type="checkbox" class="form-check-input" id="useDifferentBilling" />
        <label for="useDifferentBilling" class="form-check-label">Use a different billing address</label>
    </div>

    <!-- Billing Address (hidden by default) -->
    <div id="billingAddressContainer" style="display:none;">
        <h5>Billing Address</h5>
        <input asp-for="BillingAddress.City" class="form-control" placeholder="City" />
        <input asp-for="BillingAddress.StreetName" class="form-control mt-1" placeholder="Street Name" />
        <input asp-for="BillingAddress.StreetNumber" class="form-control mt-1" placeholder="Street Number" />
        <input asp-for="BillingAddress.BuildingNumber" class="form-control mt-1" placeholder="Building Number" />
        <input asp-for="BillingAddress.ApartmentNumber" class="form-control mt-1" placeholder="Apartment Number" />
        <input asp-for="BillingAddress.ZipCode" class="form-control mt-1" placeholder="Zip Code (Optional)" />
    </div>

    <button type="submit" class="btn btn-success">Place Order</button>
</form>

<script src="~/js/site.js"></script>